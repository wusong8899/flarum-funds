{
  "extends": "./node_modules/flarum-tsconfig/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ],
  "compilerOptions": {
    "isolatedModules": true,
    "declaration": true,
    "module": "es2020",
    "target": "es2020",
    "lib": ["dom", "es2020", "es2019.array"],
    "paths": {
      "flarum/*": [
        "../vendor/flarum/core/js/dist-typings/*"
      ],
      "flarum/tags/*": [
        "../vendor/flarum/tags/js/dist-typings/*"
      ]
    }
  }
}